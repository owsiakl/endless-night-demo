{
  "name": "endless-night-demo",
  "version": "0.0.1",
  "description": "A 3D game demo written in typescript and vanilla WebGL 2",
  "private": true,
  "scripts": {
    "start": "webpack serve --config=webpack.config-dev.js",
    "build": "webpack --config=webpack.config-prod.js && npm run sass:build",
    "sass:build": "sass ./styles:public/dist --style compressed --no-source-map",
    "sass:watch": "sass ./styles:public/dist --watch"
  },
  "author": "https://github.com/owsiakl",
  "license": "ISC",
  "devDependencies": {
    "@babel/preset-env": "^7.23.2",
    "@babel/preset-typescript": "^7.23.2",
    "babel-loader": "^9.1.3",
    "gl-matrix": "^3.4.3",
    "sass": "^1.63.6",
    "typescript": "^5.1.6",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  }
}
